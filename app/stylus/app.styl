@import url(https://fonts.googleapis.com/css?family=Roboto:400,100)

panel-box-shadow = 0px 0px 10px rgba(0,0,0,0.5)
panel-bg = #fff
border-color = #ccc
default-margin = 10px
panel-breakpoint = 570px
hour-panel-height = 105px
info-color = #9ab5d9
hour-panel-width = 350px
color-info-panel-width = 180px
modal-dialog-width = 600px
modal-dialog-breakpoint = 768px

box-shadow() 
  -moz-box-shadow arguments
  -webkit-box-shadow arguments
  box-shadow arguments

*
  box-sizing: border-box

body
  font-family: 'Roboto', sans-serif
  font-size: 14px

.content
  position: relative

.traffic-map
  height: 100%
  width: 100%

.hour-panel
  border: 1px solid border-color
  background-color: panel-bg
  position: fixed
  left: default-margin
  top: default-margin
  right: default-margin
  height: hour-panel-height
  padding: default-margin
  box-shadow(panel-box-shadow)
  @media (min-width: panel-breakpoint)
    width: hour-panel-width

.hour-panel h1
  font-size: 16px
  margin-top: 0

.info-icon
  text-decoration: none
  color: panel-bg
  border-radius: 100%
  background-color: info-color
  padding: 0 5px
  margin-left: 5px
  font-size: 14px

.pure-form select
  border: 1px solid border-color

.pure-button
  background: none
  border: 1px solid border-color
  &:hover
    background-color: #eee
    background-image: none

.previous-hour
  margin-right: default-margin

.next-hour
  margin-left: default-margin

.color-info-panel
  background-color: panel-bg
  width: color-info-panel-width
  position: fixed
  z-index: 1
  top: 2*default-margin + hour-panel-height
  right: default-margin
  border: 1px solid border-color
  box-shadow(panel-box-shadow)
  @media (min-width: panel-breakpoint)
    top: default-margin
    

.color-info-row
  padding: default-margin

.color-info-circle
  width: 15px
  height: 15px
  display: inline-block
  border-radius: 100%
  vertical-align: middle

.color-info-text
  display: inline-block
  font-size: default-margin
  padding-left: default-margin

.modal
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1050
  overflow: hidden
  outline: 0
  overflow-x: hidden
  overflow-y: auto
  background-color: rgba(0, 0, 0, 0.5)

.modal-dialog
  position: relative
  margin: default-margin
  width: auto
  @media (min-width: modal-dialog-breakpoint)
    width: modal-dialog-width
    margin: 30px auto

.modal-content
  position: relative
  background-color: panel-bg
  padding: default-margin 2*default-margin
  box-shadow(panel-box-shadow)
  border-radius: 6px

.modal-close
  color: border-color
  font-size: 24px
  position: absolute
  right: 2*default-margin
  top: default-margin
  text-decoration: none

.graph-axis path,
.graph-axis line
  fill: none
  stroke: #000
  shape-rendering: crispEdges
  stroke-width: 2px

.graph-axis text
  font-family: sans-serif
  font-size: 16px

.graph-bar
  fill: steelblue
